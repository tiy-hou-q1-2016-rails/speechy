<%= form_tag root_path, method: :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<h1>Speeches <small><%= pluralize @speeches.count, 'result' %></small></h1>

<% @speeches.each do |speech| %>
  <h1><%= link_to speech.title, speech_path(id: speech.id) %> by <%= speech.author %></h1>
  <blockquote><%= highlight excerpt(speech.content, params[:search]), params[:search] %></blockquote>
<% end %>
